<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" 
           targetNamespace="http://example.com/gestion-interventions" 
           xmlns:tns="http://example.com/gestion-interventions" 
           elementFormDefault="qualified">

  <xs:include schemaLocation="../common/typesBase.xsd"/>
  <xs:include schemaLocation="../common/contacts.xsd"/>

  <!-- État de disponibilité -->
  <xs:simpleType name="DisponibiliteType">
    <xs:restriction base="xs:string">
      <xs:enumeration value="LIBRE"/>
      <xs:enumeration value="OCCUPE"/>
      <xs:enumeration value="ARCHIVE"/>
    </xs:restriction>
  </xs:simpleType>

  <!-- Utilisateurs -->
  <xs:complexType name="UtilisateurType" abstract="true">
    <xs:sequence>
      <xs:element name="id" type="xs:int"/>
      <xs:element name="nom" type="xs:string"/>
      <xs:element name="email" type="tns:EmailType"/>
      <xs:element name="motDePasse" type="xs:string"/>
      <xs:element name="role" type="tns:RoleType"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="CitoyenType">
    <xs:complexContent>
      <xs:extension base="tns:UtilisateurType">
        <xs:sequence>
          <xs:element name="adresse" type="xs:string"/>
          <xs:element name="telephone" type="tns:TelephoneType"/>
        </xs:sequence>
      </xs:extension>
    </xs:complexContent>
  </xs:complexType>

  <xs:complexType name="TechnicienType">
    <xs:complexContent>
      <xs:extension base="tns:UtilisateurType">
        <xs:sequence>
          <xs:element name="competences" type="xs:string" minOccurs="0" maxOccurs="unbounded"/>
          <xs:element name="disponibilite" type="xs:boolean"/>
        </xs:sequence>
      </xs:extension>
    </xs:complexContent>
  </xs:complexType>

  <xs:complexType name="ChefDeServiceType">
    <xs:complexContent>
      <xs:extension base="tns:UtilisateurType">
        <xs:sequence>
          <xs:element name="departement" type="xs:string"/>
        </xs:sequence>
      </xs:extension>
    </xs:complexContent>
  </xs:complexType>

  <xs:complexType name="AdministrateurType">
    <xs:complexContent>
      <xs:extension base="tns:UtilisateurType"/>
    </xs:complexContent>
  </xs:complexType>

  <!-- REMPLACER AgentMainDOeuvreType par MainDOeuvreType étendu -->
  <xs:complexType name="MainDOeuvreType">
    <xs:complexContent>
      <xs:extension base="tns:UtilisateurType">
        <xs:sequence>
          <xs:element name="prenom" type="xs:string"/>
          <xs:element name="matricule" type="xs:string"/>
          <xs:element name="cin" type="tns:CinType"/>
          <xs:element name="telephone" type="tns:TelephoneType"/>
          <xs:element name="metier" type="xs:string"/>
          <xs:element name="disponibilite" type="tns:DisponibiliteType"/>
          <xs:element name="active" type="xs:boolean"/>
          <xs:element name="competences" type="xs:string" minOccurs="0" maxOccurs="unbounded"/>
          <xs:element name="habilitations" type="xs:string" minOccurs="0" maxOccurs="unbounded"/>
          <xs:element name="historiqueInterventions" minOccurs="0">
            <xs:complexType>
              <xs:sequence>
                <xs:element name="interventionId" type="xs:int" maxOccurs="unbounded"/>
              </xs:sequence>
            </xs:complexType>
          </xs:element>
        </xs:sequence>
      </xs:extension>
    </xs:complexContent>
  </xs:complexType>

</xs:schema>